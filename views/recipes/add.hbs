<h2>Form to add recipes</h2>
<form action="/recipes" method="POST">
    <div>
        <label for="recipe-title">Title:</label>
        <input type="text" name="title" id="recipe-title">
    </div>

    <div>
        <label for="recipe-level">Level:</label>
        <input type="text" name="level" id="recipe-level">
    </div>

    <div>
        <label for="recipe-ingredients">Ingredients:</label>
        <input type="text" name="ingredients" id="recipe-level">
    </div>

    <div>
        <label for="recipe-cuisine">Cuisine:</label>
        <input type="text" name="cuisine" id="recipe-cuisine">
    </div>

    <div>
        <label for="recipe-dishtype">Dish type:</label>
        <input type="text" name="dishType" id="recipe-dishtype">
    </div>

    <div>
        <label for="recipe-image">Image:</label>
        <input type="text" name="image" id="recipe-image">
    </div>

    <div>
        <label for="recipe-duration">Duration:</label>
        <input type="number" name="duration" id="recipe-duration">
    </div>

    <div>
        <label for="recipe-creator">Creator:</label>
        <input type="text" name="creator" id="recipe-creator">
    </div>

    <div>
        <label for="recipe-created">Created:</label>
        <input type="date" name="created" id="recipe-created">
    </div>

    <button type="button" value="submit">Submit</button>

</form>